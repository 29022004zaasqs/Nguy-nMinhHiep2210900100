@model IEnumerable<NguyenMinhHiep220900100project2.Models.SanPham>

@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
}

<h2 class="text-center">Danh Sách Sản Phẩm</h2>

<p class="text-right">
    @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-success" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Ten)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().MoTa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Gia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().TonKho)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().NgayTao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().NgayCapNhat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().DanhMuc.TenDanhMuc)
                </th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ten)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @item.Gia.ToString("C") <!-- Định dạng giá -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TonKho)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayTao, "dd/MM/yyyy") <!-- Định dạng ngày -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayCapNhat, "dd/MM/yyyy") <!-- Định dạng ngày -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaSanPham }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaSanPham }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaSanPham }, new { @class = "btn btn-danger btn-sm" }) |
                        @Html.ActionLink("Thêm vào giỏ hàng", "AddToCart", "ShoppingCart", new { maSanPham = item.MaSanPham, tenSanPham = item.Ten, gia = item.Gia, soLuong = 1 }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
